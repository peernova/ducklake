# name: test/sql/add_files/add_file_footer_size.test
# description: test if ducklake adds file footer size
# group: [add_files]

require ducklake

require parquet

statement ok
ATTACH 'ducklake:__TEST_DIR__/add_file_footer_size.db' AS ducklake (DATA_PATH '__TEST_DIR__/ducklake_empty_files/', METADATA_CATALOG 'metadata');

statement ok
CREATE TABLE ducklake.test(col1 INTEGER, col2 VARCHAR);

# write a parquet file outside of DuckLake
statement ok
COPY (SELECT 200 col1, 'world' col2) TO '__TEST_DIR__/data.parquet';

statement ok
CALL ducklake_add_data_files('ducklake', 'test', '__TEST_DIR__/data.parquet')

query I
SELECT data_file_footer_size FROM ducklake_list_files('ducklake', 'test')
----
255
